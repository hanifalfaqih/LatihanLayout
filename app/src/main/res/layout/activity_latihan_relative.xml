<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LatihanRelative">

    <Button
        android:id="@+id/btn_arcade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arcade"/>

    <Button
        android:id="@+id/btn_fps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FPS"
        android:layout_below="@id/btn_arcade"/>

    <Button
        android:id="@+id/btn_family"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Family"
        android:layout_below="@id/btn_fps" />


    <Button
        android:id="@+id/btn_shooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shooter"
        android:layout_toRightOf="@id/btn_arcade"
        android:layout_below="@id/btn_arcade"/>

    <Button
        android:id="@+id/btn_sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sport"
        android:layout_toRightOf="@id/btn_fps"
        android:layout_below="@id/btn_fps"/>

    <Button
        android:id="@+id/btn_racing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Racing"
        android:layout_toRightOf="@id/btn_family"/>

</RelativeLayout>